<p id="notice"><%= notice %></p>

<h1>Listing User Goals</h1>

<table>
  <thead>
    <tr>
      <th>Numbers of words</th>
      <th>Start time</th>
      <th>End time</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_goals.each do |user_goal| %>
      <tr>
        <td><%= user_goal.numbers_of_words %></td>
        <td><%= user_goal.start_time %></td>
        <td><%= user_goal.end_time %></td>
        <td><%= user_goal.user_id %></td>
        <td><%= link_to 'Show', user_goal %></td>
        <td><%= link_to 'Edit', edit_user_goal_path(user_goal) %></td>
        <td><%= link_to 'Destroy', user_goal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

