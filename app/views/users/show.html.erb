<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= render "shared/user_info" %>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.lessons.any? %>
      <h1>Activities</h1>
      <ol class= "lessons" >
        <%= render @lessons %>
      </ol>
    <% end %>
  </div>
</div>
