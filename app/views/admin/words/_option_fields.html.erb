<div class="row", class="fields">
  <%= f.label :Option, class: "col-md-2" %>
  <%= f.text_field :content, class: "col-md-6" %>

  <%= f.label :correct, class: "col-md-2" %>
  <%= f.check_box :correct, class: "col-md-1"%>

  <%= f.hidden_field :_destroy %>
  <%= link_to_remove_fields :Remove, f %>
</div>