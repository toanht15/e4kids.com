<%= form_for [:admin, @course] do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit (f.object.new_record? ? t("buttons.course.create") : t("buttons.course.update")), class: "btn btn-primary" %>
<% end %>